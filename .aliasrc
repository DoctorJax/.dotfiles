# Setting the path and other things
export EDITOR=nvim

export PATH="$PATH:$HOME/.scripts:$HOME/.local/bin:$HOME/.cargo/bin:$HOME/go/bin"

# # ex - archive extractor
# # usage: ex <file>
ex ()
{
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xjf $1   ;;
      *.tar.gz)    tar xzf $1   ;;
      *.tar.xz)    tar xJf $1   ;;
      *.bz2)       bunzip2 $1   ;;
      *.rar)       unrar x $1     ;;
      *.gz)        gunzip $1    ;;
      *.tar)       tar xf $1    ;;
      *.tbz2)      tar xjf $1   ;;
      *.tgz)       tar xzf $1   ;;
      *.zip)       unzip $1     ;;
      *.Z)         uncompress $1;;
      *.7z)        7z x $1      ;;
      *)           echo "'$1' cannot be extracted via ex()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}

# Aliases
alias ls='exa --icons --group-directories-first'
alias ll='ls -alh'
alias l='ls -lFh'

alias grep='grep --color'

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

alias vim='nvim'
alias vi='vim'
alias emacs='emacsclient -c -a emacs'
alias em='emacsclient -c -a "emacs -nw" -nw'

alias v='nvim'
alias n='nnn'
alias q='exit'

gitpush() {
    git add .
    git commit -m "$*"
    git push
}
alias gp=gitpush

alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
