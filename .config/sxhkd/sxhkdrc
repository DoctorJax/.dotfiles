#
# wm independent hotkeys
#

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# terminal emulator
ctrl + grave
	alacritty

# program launcher
super + e
	rofi -show run

# most used
super + shift + {b,f,e,s}
    {brave,firefox,nemo,/home/jackson/.scripts/screenshot.sh}

# emacs
super + alt + e
    emacsclient -a 'emacs' -c

# audio controls
XF86Audio{Raise,Lower}Volume
    amixer -q set Master 1%{+,-}

XF86AudioMute
    amixer -q set Master toggle

# music controls
XF86Audio{Next,Prev,Play}
    playerctl {next,previous,play-pause}

# mpc controls
ctrl + XF86Audio{Next,Prev,Play}
    mpc {next,prev,toggle}

shift + XF86Audio{Next,Prev}
    /home/jackson/.scripts/mpdvolumenotif.sh -{u,d}

# mic mute
super + ctrl + shift + alt + m
    /home/jackson/.scripts/micmute.sh

# random wallpapers
super + F1
    /home/jackson/.scripts/wallpapers.sh -r

# switch keyboard layout
Alt_R
    setxkbmap -print -verbose 10 | grep variant && setxkbmap -layout us || setxkbmap -variant colemak

#
# bspwm hotkeys
#

# quit/restart bspwm
super + ctrl + {q,r}
	bspc {quit,wm -r}

# close
super + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,c,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# minimize/maximize window
super + {_,shift + }n
    /home/jackson/.scripts/minimize.sh -{n,m}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + Tab
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:^{1-9,10}

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# more commands that I thought was useful
#

# balance nodes
super + b
    bspc node @/ -B

# rotate tiling modes
super + ctrl + {Right, Left}
    bspc node @parent --rotate {90,270}

# Close all receptacle
super + shift + i
  for win in `bspc query -N -n .leaf.\!window`; do bspc node $win -k ; done;

# Insert receptacle
super + i; {h,j,k,l}
  bspc node --presel-dir {west,south,north,east} -i

# Move to rectacle
super + o
  bspc node $(bspc query -N -n focused) -n $(bspc query -N -n .leaf.\!window)
